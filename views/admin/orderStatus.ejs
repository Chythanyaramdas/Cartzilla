        <div class="container-fluid d-flex">
          <div class="card mb-3 col-md-8 h-auto" >
            
            <form action="" method="post" id="statusChange">
              <div class="d-flex justify-content-around">
              <div>
                <input type="hidden" name="id" value="<%=orders._id %>">
                <label for="" class="text-danger" >Order Status: </label>
                <span ><%= orders.orderStatus %></span>
                  <select class="edit" id="orderStatus" name="orderStatus">
                    <option value="<%= orders.orderStatus %>"><%= orders.orderStatus %></option>
                    <% for(let status of orderStatus){ 
                      if(status == orders.orderStatus){ %>
                       <% continue %>
                        <%
                      } %>
                      <option value="<%= status %>"><%= status %></option>
                      <%
                    } %>

                  </select>
                
              </div>
              <div>
                <label class=" text-danger" for="">Payment Status :</label>
                <span ><%= orders.paymentStatus %></span>
                <select class="edit" id="paymentStatus" name="paymentStatus">
                  <option value="<%= orders.paymentStatus %>"><%= orders.paymentStatus %></option>
                  <% for(let status of paymentStatus){ 
                  
                  if(status == orders.paymentStatus){ %>
                    <% continue %>
                     <%
                   } %>
                  <option value="<%= status %>"><%= status %></option>
                  <%
                } %>  
              </select>
              </div>
              <div>
                <button class="edit" type="submit" >submit</button>
              </div>
              
            </div> 
              
            </form>
            <% if(orders.orderStatus == 'Cancelled'){%>
              
             <% }else{%>
              <button class="show col-lg-2 btn btn-dark mx-auto">Edit</button>
               <% } %>
            

            <div class="row p-3">
        <% for(i = 0;i < orders.product.length;i++){ %>
            
                    <div class="col-lg-12">
                      <div class="row g-0 mb-2 border-secondary">
                        <div class="col-md-4">
                          <img src="/images/adminImages/<%= orders.product[i].productId.image[0] %>" alt="" style="width: auto;height: 250px;" >
                        </div>
                        <div class="col-md-8">
                          <div class="card-body">
                            <h5 class="card-title"><%= orders.product[i].productId.name %></h5>
                            <p class="card-text">Quantity: <%= orders.product[i].quantity %></p>
                            <p class="card-text">Unit Price: <%= orders.product[i].productId.price %></p>
                            <p class="card-text">Total Amount: <%= orders.product[i].quantity*orders.product[i].productId.price %></p>
                            
                            <p class="card-text">Phone Number: <%= user.phoneNumber %></p>
                            <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                          </div>
                        </div>
                      </div>
                    </div>
                   
        <% } %>
        
      </div>
      </div>
      <div class="col-lg-4">
        <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
          <div class="card-header">Address</div>
          <div class="card-body">
            <p>Name: <%= address[0].name %></p>
            <p class="card-text">Phone Number: <%= address[0].phoneNumber %></p>
            <p class="card-text">Pin Code: <%= address[0].pinCode %></p>
            <p class="card-text">Locality: <%= address[0].locality %></p>
            <p class="card-text">Address: <%= address[0].address %></p>
            <p class="card-text">District: <%= address[0].district %></p>
            <p class="card-text">State: <%= address[0].state %></p>
          </div>
        </div>
